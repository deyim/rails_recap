<h1>Memos</h1>

<div class="table-responsibe">
	<table class="table table-fit">
		<thead>
			<tr>
				<th>title</th>
				<th>user</th>
				<th>comments</th>
			</tr>
		</thead>
		<tbody>			
			<% @memos.each do |memo| %>
			<tr>
				<td><%= link_to memo.title, memo %></td>
				<td><%= memo.user.email %></td>
				<td><%= memo.comments.count %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<%= paginate @memos %>
</div>

