
<h1><%= @memo.title %></h1>
<hr>
<h2>By <%= @memo.user.email %></h2>
<hr>
<p><%= @memo.content.html_safe %></p>
<h3>
	<%= icon 'time' %>
	<%= local_time(@memo.created_at) %></h3>
	<%# TODO: only activate when current_user == writer %>
	<%= icon 'pencil' %>
	<%= link_to 'Update', edit_memo_path %>
	<%= icon 'trash' %>
	<%= link_to 'Delete', memo_path, method: :delete%>
<hr/>

<div class="well">
	<p>
		<%= bootstrap_form_for @comment, url: memo_comments_path(@memo) do |f| %>
			<%= f.hidden_field :user_id, value: current_user.id%>
			<%= f.hidden_field :memo_id, value: @memo.id%>
			<%= f.text_field :content, label: 'Leave a comment!'%>
			<%= f.submit %>
			<% end %>
	</p>
</div>

<div class="well">
	<p>
		<% @comments.each do |c| %>
			<div class="media">
				<h4 class="media-heading">
					<strong> <%= c.user.email %><br></strong>
				</h4>
					<p> <%= c.content %> </p>
			
				<%= icon 'time' %>
				<small><%= local_time(c.created_at) %></small><%= link_to icon('trash'), memo_comment_path(@memo, c), method: :delete   %>
				
			
			</div>
		<% end %>
	</p>
</div>